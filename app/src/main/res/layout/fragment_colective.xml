<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ColectiveFragment">

    <include layout="@layout/action_toolbar"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space24"
        android:orientation="vertical"
        android:padding="@dimen/space16">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:src="@drawable/logo_bgm2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/space16"
            android:layout_marginRight="@dimen/space16"
            android:background="@color/colorIcons" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space8"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="110dp"
                    android:layout_height="75dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Disco"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/h2" />

                    <TextView
                        android:id="@+id/id_txt_number_disc_bus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textAlignment="center"
                        android:textColor="@color/colorPinkTrans"
                        android:textSize="@dimen/h1" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="110dp"
                    android:layout_height="75dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Placa"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/h2" />

                    <TextView
                        android:id="@+id/id_txt_registration_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ABC-123"
                        android:textAlignment="center"
                        android:textColor="@color/colorPinkTrans"
                        android:textSize="@dimen/h1" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="110dp"
                    android:layout_height="75dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Capacidad"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/h2" />

                    <TextView
                        android:id="@+id/id_txt_sch_bus_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textAlignment="center"
                        android:textColor="@color/colorPinkTrans"
                        android:textSize="@dimen/h1" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/id_btn_select_stops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space24"
                android:layout_marginTop="@dimen/space8"
                android:layout_marginRight="@dimen/space24"
                android:background="@drawable/btn_rounded"
                android:backgroundTint="@color/colorWhiteDark"
                android:text="Seleccionar parada"
                android:textColor="@color/colorPrimaryText" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/space16"
            android:layout_marginTop="@dimen/space16"
            android:layout_marginRight="@dimen/space16"
            android:background="@color/colorIcons" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/space8">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conductor"
                    android:textColor="@color/colorPinkTrans"
                    android:textSize="@dimen/h3"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:paddingTop="@dimen/space8"/>

                <ImageView
                    android:layout_width="@dimen/space24"
                    android:layout_height="@dimen/space24"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"
                    android:src="@drawable/ic_card_userd" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical"
                android:padding="@dimen/space8">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="3dp">

                    <TextView
                        android:id="@+id/id_txt_first_name_driver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="First Name Driver"
                        android:textColor="@color/colorWhiteDark"
                        android:textSize="@dimen/h2"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/id_txt_last_name_driver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Name Driver"
                        android:textColor="@color/colorWhiteDark"
                        android:textSize="@dimen/h3"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/id_txt_phone_driver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="########"
                        android:textColor="@color/colorWhiteDark"
                        android:textSize="@dimen/h3" />

                    <TextView
                        android:id="@+id/id_txt_address_driver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Addres Driver"
                        android:textColor="@color/colorWhiteDark"
                        android:textSize="@dimen/h3" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/space16"
                    android:background="@color/colorIcons" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/space8">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Acompañante"
                    android:textColor="@color/colorPinkTrans"
                    android:textSize="@dimen/h3"
                    android:textAlignment="center"
                    android:paddingTop="@dimen/space8"/>

                <ImageView
                    android:layout_width="@dimen/space24"
                    android:layout_height="@dimen/space24"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"
                    android:src="@drawable/ic_card_userd" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical"
                android:padding="@dimen/space8">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="3dp">

                    <TextView
                        android:id="@+id/id_txt_first_name_accompanist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="First Name Accompanist"
                        android:textColor="@color/colorWhiteDark"
                        android:textSize="@dimen/h2"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/id_txt_last_name_accompanist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Name Accompanist"
                        android:textColor="@color/colorWhiteDark"
                        android:textSize="@dimen/h3"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/id_txt_phone_accompanist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="########"
                        android:textColor="@color/colorWhiteDark"
                        android:textSize="@dimen/h3" />

                    <TextView
                        android:id="@+id/id_txt_address_accompanist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address Accompanist"
                        android:textColor="@color/colorWhiteDark"
                        android:textSize="@dimen/h3" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/space16"
                    android:background="@color/colorIcons" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Gracias por preferirnos"
            android:textAlignment="center" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>