<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/modal_background"
    android:orientation="vertical"
    android:padding="@dimen/space16">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space5">

        <TextView
            android:id="@+id/id_txt_alerta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SELECCIÓN DE PARADAS"
            android:textAlignment="center"
            android:textSize="@dimen/h2"
            android:layout_marginTop="@dimen/space5"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/id_txt_name_accompanist_bsd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Last Name, first name User"
            android:textSize="@dimen/h3"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/space16"
            android:textColor="@color/colorTextDark"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/id_txt_employment_bsd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Acompañante"
            android:textSize="@dimen/h3"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/space5"
            android:textColor="@color/colorWhiteDark"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/id_linearLayout_Stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space16"
        android:background="@drawable/container_white"
        android:backgroundTint="@color/colorWhiteDark"
        android:layout_marginTop="@dimen/space8">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Seleccione el lugar"
            android:textSize="@dimen/h3"
            android:textAlignment="textStart"
            android:layout_marginTop="@dimen/space5"
            android:textColor="@color/colorTextDark"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/container_white"
            android:backgroundTint="@color/colorBackgroundContainer"
            android:layout_marginTop="@dimen/space8"
            android:padding="@dimen/space8">

            <Spinner
                android:id="@+id/id_spinner_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:textSize="@dimen/h3"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/space16">

            <EditText
                android:id="@+id/id_text_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Mensaje..."
                android:inputType="textMultiLine"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/space5"
                android:layout_gravity="left|center"
                android:background="@drawable/custom_editext_chats"
                android:padding="@dimen/space8"/>

            <ImageView
                android:id="@+id/id_Img_btn_send"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_send_padding"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>