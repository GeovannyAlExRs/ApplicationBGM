<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bgm_splash_def1"
    tools:context=".activities.SplashActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="50dp">

        <ImageView
            android:id="@+id/id_img_logo"
            android:layout_width="120dp"
            android:layout_height="179dp"
            android:src="@drawable/bgm_logosplash"
            android:layout_gravity="center"
            android:layout_margin="15dp"/>

        <ImageView
            android:id="@+id/id_img_cooperativa"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bgm_textosplash"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/id_txt_slogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIRVIENDO A LA COMUNIDAD"
            android:textColor="@color/colorPinkTrans"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:textSize="@dimen/h2"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/space56">

        <TextView
            android:id="@+id/id_txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Santa Elena - Chanduy"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:textSize="@dimen/h3"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/id_txt_v1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version 1.1.0"
            android:textAlignment="center"
            android:textColor="@color/colorBackgroundContainer"
            android:textSize="@dimen/h3"
            android:textStyle="normal" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.coordinatorlayout.widget.CoordinatorLayout>